{
  "extends": "@dept/tsconfig/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "target": "esnext",
    "rootDir": ".",
    "jsxImportSource": "@emotion/react",
    "typeRoots": ["../../node_modules/@types", "types/emotion.d.ts"]
  },
  "include": ["src", "types"]
}
