{
  "extends": "@dept/tsconfig/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "target": "ES2015",
    "typeRoots": ["../../node_modules/@types", "./types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
