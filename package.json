{
  "name": "@dept/platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "author": "DEPTÂ®",
  "repository": "bitbucket:tamtam-nl/dtnl-dept-react-setup",
  "scripts": {
    "dev": "turbo run dev --parallel --continue",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test",
    "postinstall": "husky install",
    "format": "prettier --write './{apps,packages}/**/*.{ts,tsx}'",
    "type-check": "turbo type-check --filter=web"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-storybook": "latest",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-imports": "^3.2.2",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --cache --fix --max-warnings 0",
    "**/*.(js|json|ts|tsx)": [
      "prettier --write"
    ]
  },
  "engines": {
    "npm": ">=8",
    "node": ">=18"
  },
  "volta": {
    "node": "18.12.1"
  },
  "packageManager": "yarn@3.2.4"
}
