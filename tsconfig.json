{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "@static/*": ["./static/*"],
      "@pages/*": ["./pages/*"],
      "@server/*": ["./server/*"],
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*",
    "pages/**/*",
    "stories/**/*",
    "types/**/*",
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      ".next",
      "server/**/*.*"
  ]
}
